{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "baseUrl": ".",                                  
    "paths": {
      "@/constants": ["constants.ts"]
    },                                                  
    /* Modules */
    "module": "commonjs",                
    "rootDir": "./src",                 
    "outDir": "./dist",                
    "esModuleInterop": true,         
    /* Type Checking */
    "strict": true,                  
    "skipLibCheck": true,            
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  }
}
